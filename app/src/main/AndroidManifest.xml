<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.enduser">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/aahar_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/aahar_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.EndUser"
        tools:ignore="AllowBackup">
        <activity
            android:name=".Activity.SignUpActivity"
            android:exported="false" />

        <activity
            android:name=".Activity.SigninActivity"
            android:exported="true" />
        
        <activity
            android:name=".Activity.OtpVerificationActivity"
            android:exported="false"/>

        <activity
            android:name=".Activity.SettingActivity"
            android:exported="false"/>

        <activity
            android:name=".Activity.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.EndUser.NoActionBar" />

        <activity
            android:name=".Activity.SplashScreen"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EndUser.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>