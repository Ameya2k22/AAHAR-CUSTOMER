<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_info_3_bg"
    tools:context=".ui.addMess.AddMessFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:text="@string/mess_info"
                android:textColor="@color/red"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/messImage" />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <EditText
                    android:id="@+id/ownerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_your_name"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:minHeight="48dp"
                    android:textColor="@color/light_orange"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/messName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_mess_name"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:autofillHints="name"/>

                <EditText
                    android:id="@+id/messLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_mess_address"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:autofillHints="location"/>

                <EditText
                    android:id="@+id/messEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_mess_email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/light_orange"
                    android:textColorHint="@color/white"
                    android:autofillHints="mess email"/>

                <EditText
                    android:id="@+id/messUpiId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="32sp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_upi_id"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:autofillHints="upi id"/>

                <EditText
                    android:id="@+id/monthlyPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_monthly_price"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:autofillHints="monthly price"/>

                <EditText
                    android:id="@+id/specialDishes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32sp"
                    android:layout_marginEnd="32sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/text_box"
                    android:fontFamily="sans-serif"
                    android:hint="@string/enter_special_dishes"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/white"
                    android:autofillHints="special dishes"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/create"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/dark_orange"
                    android:fontFamily="sans-serif"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:text="@string/create"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/messImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="40dp"
                android:src="@drawable/aahar_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>